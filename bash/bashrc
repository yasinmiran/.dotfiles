#!/usr/bin/env bash

# Using the same configurations from the ZSH shell.
# Since i'm not heavily relying on the ZSH specific
# features, I can use the same configurations.

# Source .zshenv if it exists
if [ -f "$DOTFILES_DIR/zsh/zshenv" ]; then
    source "$DOTFILES_DIR/zsh/zshenv"
fi

# Source .zshrc if it exists
if [ -f "$DOTFILES_DIR/zsh/zshrc" ]; then
    source "$DOTFILES_DIR/zsh/zshrc"
fi
